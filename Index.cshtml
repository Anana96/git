@model EnglishVideo.Models.Word

@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<h1>hii</h1>

<video controls="controls" poster="~/Content/Images/Posters/Harry1.jpg" preload="auto">
    <source src="~/Content/Video/Harry1.mkv" type='video/x-matroska'>
