</video>

<div id="display">
    <span id="subt"></span>
    <p  @*onmouseover="ChangeOver(this)*@ ">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
</div>


<div class="jumbotron">
    <h1>ASP.NET</h1>
    
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>


@using (Html.BeginForm("GetWord", "Home", FormMethod.Post))
{
    @Html.LabelFor(model => model.English, htmlAttributes: new { @class = "control-label col-md-2" })
